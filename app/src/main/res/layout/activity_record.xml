<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/recorder_bt"
        android:text="开始" />

    <Button
        android:id="@+id/puase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/recorder_bt"
        android:text="暂停" />
    <Button
        android:id="@+id/goon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/recorder_bt"
        android:text="继续" />
    <Button
        android:id="@+id/stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/play_bt"
        android:text="停止" />
    <Button
        android:id="@+id/playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放"/>
    <Button
        android:id="@+id/unplaying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止播放"/>


</LinearLayout>